<DockPanel LastChildFill="True"
           x:Class="Tobi.Plugin.Descriptions.DescriptionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:UI="clr-namespace:Tobi.Common.UI;assembly=Tobi.Common"
           xmlns:System="clr-namespace:System;assembly=mscorlib"
           xmlns:Descriptions="clr-namespace:Tobi.Plugin.Descriptions"
           xmlns:XAML="clr-namespace:Tobi.Common.UI.XAML;assembly=Tobi.Common"
           xmlns:search="clr-namespace:Tobi.Common.Search;assembly=Tobi.Common"
           xmlns:_UnusedCode="clr-namespace:Tobi.Common._UnusedCode;assembly=Tobi.Common"
           xmlns:Common="clr-namespace:Tobi.Common;assembly=Tobi.Common"
           Unloaded="OnUnloaded_Panel"
           Loaded="OnLoaded_Panel"
           
           
      KeyboardNavigation.TabNavigation="Local">
  <!-- 
           DataContext="{Binding RelativeSource={RelativeSource Self}}" -->

  <DockPanel.Resources>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Padding" Value="4,2,4,2"/>
    </Style>
  </DockPanel.Resources>

  <DockPanel
    DockPanel.Dock="Top"
     LastChildFill="True"
    
    
      KeyboardNavigation.TabNavigation="Local"
    >

    <!--<StackPanel
    DockPanel.Dock="Left"
    Orientation="Horizontal"
                 HorizontalAlignment="Stretch"
                      Margin="7,7,7,7">-->
    <Image
      DockPanel.Dock="Left"
      Focusable="False"
        Height="100"
        HorizontalAlignment="Left"
               VerticalAlignment="Top"
                  Stretch = "Uniform"
                  StretchDirection="DownOnly"
        Source="{Binding DescribableImage, Mode=OneWay}"
                
                                Margin="6,6,12,0"
              />

    <!--</StackPanel>-->

    <DockPanel DockPanel.Dock="Right"
               
           HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
  >
      
    <Border
      DockPanel.Dock="Top"
           HorizontalAlignment="Right"
               VerticalAlignment="Top"
  
  Visibility="{Binding ShowAdvancedEditor, Mode=OneWay, Converter={XAML:BooleanToVisibilityConverter}}"
      
      Focusable="false"
      Padding="0" Margin="0" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
      >
      <Button
        Control.TabIndex="2"
        x:Name="ButtonGoBasic"
      
            Style="{StaticResource ToolBarButtonBaseStyle}"
          
               Content="Switch to basic editor"
               Click="OnClick_ButtonGoBasic"
               Padding="4,2,4,2"
               Margin="4,2,4,0"
  />

    </Border>
      <Border
        DockPanel.Dock="Top"
      
           HorizontalAlignment="Right"
               VerticalAlignment="Top"
  Visibility="{Binding ShowAdvancedEditor, Mode=OneWay, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
      
           Focusable="false" Padding="0" Margin="0" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
      <Button
        Control.TabIndex="3"
      x:Name="ButtonGoAdvanced"
      
          Style="{StaticResource ToolBarButtonBaseStyle}"
          
             Content="Switch to advanced editor"
             Click="OnClick_ButtonGoAdvanced"
             Padding="4,2,4,2"
             Margin="4,2,4,0"
  />

    </Border>

      <TextBlock
        DockPanel.Dock="Bottom"
           HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
  
           Padding="4,2,4,2"
           Margin="4,2,4,0"
        >
      <Hyperlink
        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
        Focusable="true"
        
      KeyboardNavigation.TabIndex="4"
      KeyboardNavigation.IsTabStop="true"
        
        Click="OnClick_ButtonImport"
        KeyUp="OnKeyUp_ButtonImport">
        <Run Text="Import DIAGRAM XML"/>
      </Hyperlink>
    </TextBlock>

    <!--<Button
           DockPanel.Dock="Bottom"
           Content="Import DIAGRAM XML..."
           HorizontalAlignment="Right"
           Click="OnClick_ButtonImport"
           Padding="4,2,4,2"
           Margin="4,2,4,0"
  />-->

    </DockPanel>

    <TextBlock
      KeyboardNavigation.TabIndex="1"
      KeyboardNavigation.IsTabStop="true"
      
      x:Name="ImageLabel"
      Text="{Binding DescribableImageInfo, Mode=OneWay}"
      
      Focusable="True"
      
                 FontWeight="Bold"
                 TextWrapping="WrapWithOverflow"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"/>



  </DockPanel>
 
  
  <Grid
          HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
          Margin="0,12,0,0"
          >
    <Grid.RowDefinitions>
      <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>
    
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <TabControl
       x:Name="BasicPanel"
        Visibility="{Binding ShowAdvancedEditor, Mode=OneWay, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
    Grid.Row="0"
    Grid.Column="0"
    
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
    BorderThickness="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
              >

      <TabItem Header="Text descriptions">
    <DockPanel
      KeyboardNavigation.TabNavigation="Local"
   
        HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
    

    LastChildFill="True">

      <TextBlock
        Text="No issues detected."
        Margin="0, 6, 0, 0"
        
      DockPanel.Dock="Bottom"
        
        Focusable="true"
        FontWeight="Bold"
              KeyboardNavigation.IsTabStop="True"
              KeyboardNavigation.TabIndex="1"
                  
      Visibility="{Binding HasValidationWarning_BasicText, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
        />
      
      <GroupBox

        KeyboardNavigation.TabNavigation="Local"
      DockPanel.Dock="Bottom"
    
            Visibility="{Binding HasValidationWarning_BasicText, Converter={XAML:BooleanToVisibilityConverter}}"
        Margin="0, 3, 0, 0" Padding="6" >
        <GroupBox.Header>
          <TextBlock
            Foreground="Red"
            Focusable="true"
            FontWeight="Bold"
                  KeyboardNavigation.IsTabStop="True"
                  KeyboardNavigation.TabIndex="1"
                      Text="Notes"/>
        </GroupBox.Header>

        <ScrollViewer
        HorizontalAlignment="Stretch"
      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
          <TextBlock
    FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   
                    KeyboardNavigation.IsTabStop="true"
                    KeyboardNavigation.TabIndex="2"

    TextWrapping="WrapWithOverflow"
            Text="{Binding ValidationText_BasicText}"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
            Focusable="True"
                       />
        </ScrollViewer>
      </GroupBox>

      <Grid
                    KeyboardNavigation.IsTabStop="False"
                    KeyboardNavigation.TabIndex="1"
            HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
          >
      <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="*"></ColumnDefinition>
      </Grid.ColumnDefinitions>

      <GroupBox
        KeyboardNavigation.TabNavigation="Local"
    Grid.Row="0"
    Grid.Column="0"
    
        Margin="0, 6, 0, 0" Padding="6" >
        <GroupBox.Header>
          <TextBlock
            Focusable="true"
            FontWeight="Bold"
                  KeyboardNavigation.IsTabStop="True"
                  KeyboardNavigation.TabIndex="1"
                      Text="Long Description"/>
        </GroupBox.Header>

        <DockPanel LastChildFill="True">
      <DockPanel
                  DockPanel.Dock="Bottom"
          HorizontalAlignment="Stretch">
        <Button
          DockPanel.Dock="Left"
                  FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
               Control.TabIndex="3"
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
                Margin="0,4,0,0"
                Content="Edit"
                      
          Click="OnClick_ButtonEditText_LongDesc"/>
        <Button
          DockPanel.Dock="Left"
                  FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
               Control.TabIndex="4"
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
                Margin="4,4,0,0"
                Content="Clear"
                IsEnabled="{Binding HasDescriptionText_LongDesc}"
          Click="OnClick_ButtonClearText_LongDesc"/>


        <Button
          DockPanel.Dock="Right"
                  FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
               Control.TabIndex="5"
          VerticalAlignment="Center"
          HorizontalAlignment="Right"
                Margin="4,4,0,0"
                Content="ZZZZ"
                  
  Visibility="{Binding HasAudio_LongDesc, Mode=OneWay, Converter={XAML:BooleanToVisibilityConverter}}"
      
               Padding="0"
                  
                  x:Name="ButtonAudio_LongDesc"
          Click="OnClick_ButtonAudio_LongDesc">

          <Button.ToolTip>
            <ToolTip
              Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}"
              ContentStringFormat="{}{0}"
      />
          </Button.ToolTip>
          <Button.Style>
            <Style TargetType="{x:Type Button}"
                   BasedOn="{StaticResource ToolBarButtonBaseStyle}">
              <Style.Setters>
                <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}">
                </Setter>
              </Style.Setters>
            </Style>
          </Button.Style>
        </Button>
        
        
        <Button
          DockPanel.Dock="Right"
                  FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
               Control.TabIndex="6"
          VerticalAlignment="Center"
          HorizontalAlignment="Right"
                Margin="4,4,0,0"
                Content="ZZZZ"
                  
  Visibility="{Binding HasAudio_LongDesc, Mode=OneWay, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
      
               Padding="0"
                  
                  x:Name="ButtonNoAudio_LongDesc"
          Click="OnClick_ButtonNoAudio_LongDesc"
                  
                   
                  >

          <Button.ToolTip>
            <ToolTip
              Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}"
              ContentStringFormat="{}{0}"
      />
          </Button.ToolTip>
          <Button.Style>
            <Style TargetType="{x:Type Button}"
                   BasedOn="{StaticResource ToolBarButtonBaseStyle}">
              <Style.Setters>
                <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}">
                </Setter>
              </Style.Setters>
            </Style>
          </Button.Style>
        </Button>
      </DockPanel>

          <ScrollViewer
            
        HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
    
        HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <UI:TextBoxReadOnlyCaretVisible
      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
        
                     Control.TabIndex="2"
              x:Name="DescriptionTextBox_LongDesc"
      TextWrapping="WrapWithOverflow"
              TextReadOnly="{Binding DescriptionText_LongDesc}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
              Focusable="True"
                    IsEnabled="{Binding HasDescriptionText_LongDesc}"
                       />
          </ScrollViewer>
          <!--Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"-->
        </DockPanel>
      </GroupBox>

      <GroupBox
        KeyboardNavigation.TabNavigation="Local"
    Grid.Row="0"
    Grid.Column="1"
    
        Margin="0, 6, 0, 0" Padding="6" >
        <GroupBox.Header>
          <TextBlock
            Focusable="true"
            FontWeight="Bold"
                  KeyboardNavigation.IsTabStop="True"
                  KeyboardNavigation.TabIndex="1"
                      Text="Summary"/>
        </GroupBox.Header>

        <DockPanel LastChildFill="True">

          <DockPanel
                  DockPanel.Dock="Bottom"
          HorizontalAlignment="Stretch">
            <Button
              DockPanel.Dock="Left"
                      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   Control.TabIndex="3"
              VerticalAlignment="Center"
              HorizontalAlignment="Left"
                    Margin="0,4,0,0"
                    Content="Edit"
                      
              Click="OnClick_ButtonEditText_Summary"/>
            <Button
              DockPanel.Dock="Left"
                      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   Control.TabIndex="4"
              VerticalAlignment="Center"
              HorizontalAlignment="Left"
                    Margin="4,4,0,0"
                    Content="Clear"
                    IsEnabled="{Binding HasDescriptionText_Summary}"
              Click="OnClick_ButtonClearText_Summary"/>


            <Button
              DockPanel.Dock="Right"
                      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   Control.TabIndex="5"
              VerticalAlignment="Center"
              HorizontalAlignment="Right"
                    Margin="4,4,0,0"
                    Content="ZZZZ"
                  
      Visibility="{Binding HasAudio_Summary, Mode=OneWay, Converter={XAML:BooleanToVisibilityConverter}}"
      
                   Padding="0"
                  
                      x:Name="ButtonAudio_Summary"
              Click="OnClick_ButtonAudio_Summary"
                  >

              <Button.ToolTip>
                <ToolTip
                  Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}"
                  ContentStringFormat="{}{0}"
      />
              </Button.ToolTip>
              <Button.Style>
                <Style TargetType="{x:Type Button}"
                       BasedOn="{StaticResource ToolBarButtonBaseStyle}">
                  <Style.Setters>
                    <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}">
                    </Setter>
                  </Style.Setters>
                </Style>
              </Button.Style>
            </Button>


            <Button
              DockPanel.Dock="Right"
                      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   Control.TabIndex="6"
              VerticalAlignment="Center"
              HorizontalAlignment="Right"
                    Margin="4,4,0,0"
                    Content="ZZZZ"
                  
      Visibility="{Binding HasAudio_Summary, Mode=OneWay, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
      
                   Padding="0"
                  
                      x:Name="ButtonNoAudio_Summary"
              Click="OnClick_ButtonNoAudio_Summary"
                  
                  >

              <Button.ToolTip>
                <ToolTip
                  Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}"
                  ContentStringFormat="{}{0}"
      />
              </Button.ToolTip>
              <Button.Style>
                <Style TargetType="{x:Type Button}"
                       BasedOn="{StaticResource ToolBarButtonBaseStyle}">
                  <Style.Setters>
                    <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}">
                    </Setter>
                  </Style.Setters>
                </Style>
              </Button.Style>
            </Button>
          </DockPanel>

          <ScrollViewer
            
        HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
    
        HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <UI:TextBoxReadOnlyCaretVisible
      FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
        
                     Control.TabIndex="2"
              x:Name="DescriptionTextBox_Summary"
      TextWrapping="WrapWithOverflow"
              TextReadOnly="{Binding DescriptionText_Summary}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
              Focusable="True"
                    IsEnabled="{Binding HasDescriptionText_Summary}"
                       />
          </ScrollViewer>
          <!--Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"-->
        </DockPanel>
      </GroupBox>

        <GroupBox
          KeyboardNavigation.TabNavigation="Local"
      Grid.Row="0"
      Grid.Column="2"
    
          Margin="0, 6, 0, 0" Padding="6" >
          <GroupBox.Header>
            <TextBlock
              Focusable="true"
              FontWeight="Bold"
                    KeyboardNavigation.IsTabStop="True"
                    KeyboardNavigation.TabIndex="1"
                        Text="Simplified Language"/>
          </GroupBox.Header>

          <DockPanel LastChildFill="True">
            <DockPanel
                  DockPanel.Dock="Bottom"
          HorizontalAlignment="Stretch">
              <Button
                DockPanel.Dock="Left"
                        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                     Control.TabIndex="3"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                      Margin="0,4,0,0"
                      Content="Edit"
                      
                Click="OnClick_ButtonEditText_SimplifiedLanguage"/>
              <Button
                DockPanel.Dock="Left"
                        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                     Control.TabIndex="4"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                      Margin="4,4,0,0"
                      Content="Clear"
                      IsEnabled="{Binding HasDescriptionText_SimplifiedLanguage}"
                Click="OnClick_ButtonClearText_SimplifiedLanguage"/>


              <Button
                DockPanel.Dock="Right"
                        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                     Control.TabIndex="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                      Margin="4,4,0,0"
                      Content="ZZZZ"
                  
        Visibility="{Binding HasAudio_SimplifiedLanguage, Mode=OneWay, Converter={XAML:BooleanToVisibilityConverter}}"
      
                     Padding="0"
                  
                        x:Name="ButtonAudio_SimplifiedLanguage"
                Click="OnClick_ButtonAudio_SimplifiedLanguage"
                  >
          <Button.ToolTip>
            <ToolTip
              Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}"
              ContentStringFormat="{}{0}"
      />
          </Button.ToolTip>
                <Button.Style>
                  <Style TargetType="{x:Type Button}"
                         BasedOn="{StaticResource ToolBarButtonBaseStyle}">
                    <Style.Setters>
                      <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.AudioIcon}">
                      </Setter>
                    </Style.Setters>
                  </Style>
                </Button.Style>
              </Button>


              <Button
                DockPanel.Dock="Right"
                        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                     Control.TabIndex="6"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                      Margin="4,4,0,0"
                      Content="ZZZZ"
                  
        Visibility="{Binding HasAudio_SimplifiedLanguage, Mode=OneWay, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
      
                     Padding="0"
                  
                        x:Name="ButtonNoAudio_SimplifiedLanguage"
                Click="OnClick_ButtonNoAudio_SimplifiedLanguage"
                  
                  >

                <Button.ToolTip>
                  <ToolTip
                    Content="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}"
                    ContentStringFormat="{}{0}"
      />
                </Button.ToolTip>
                <Button.Style>
                  <Style TargetType="{x:Type Button}"
                         BasedOn="{StaticResource ToolBarButtonBaseStyle}">
                    <Style.Setters>
                      <Setter Property="AutomationProperties.Name" Value="{x:Static Descriptions:Tobi_Plugin_Descriptions_Lang.NoAudioIcon}">
                      </Setter>
                    </Style.Setters>
                  </Style>
                </Button.Style>
              </Button>
            </DockPanel>

            <ScrollViewer
            
          HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
    
          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
              <UI:TextBoxReadOnlyCaretVisible
        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
        
                       Control.TabIndex="2"
                x:Name="DescriptionTextBox_SimplifiedLanguage"
        TextWrapping="WrapWithOverflow"
                TextReadOnly="{Binding DescriptionText_SimplifiedLanguage}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                Focusable="True"
                      IsEnabled="{Binding HasDescriptionText_SimplifiedLanguage}"
                       />
            </ScrollViewer>
            <!--Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"-->
          </DockPanel>
        </GroupBox>

      </Grid>

  </DockPanel>

      </TabItem>

      <TabItem Header="Alternative Images">

        <DockPanel
          KeyboardNavigation.TabNavigation="Local"
   
            HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
    

        LastChildFill="True">

          <TextBlock
            Text="No issues detected."
            DockPanel.Dock="Bottom"
    
                Focusable="true"
                FontWeight="Bold"
                      KeyboardNavigation.IsTabStop="True"
                      KeyboardNavigation.TabIndex="1"
                Visibility="{Binding HasValidationWarning_BasicImage, Converter={XAML:BooleanToOppositeVisibilityConverter}}"
            Margin="0, 3, 0, 0" 
            />
          
          <GroupBox

            KeyboardNavigation.TabNavigation="Local"
          DockPanel.Dock="Bottom"
    
                Visibility="{Binding HasValidationWarning_BasicImage, Converter={XAML:BooleanToVisibilityConverter}}"
            Margin="0, 3, 0, 0" Padding="6" >
            <GroupBox.Header>
              <TextBlock
                Foreground="Red"
                Focusable="true"
                FontWeight="Bold"
                      KeyboardNavigation.IsTabStop="True"
                      KeyboardNavigation.TabIndex="1"
                          Text="Notes"/>
            </GroupBox.Header>

            <ScrollViewer
            HorizontalAlignment="Stretch"
          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
              <TextBlock
        FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                   
                        KeyboardNavigation.IsTabStop="true"
                        KeyboardNavigation.TabIndex="2"

        TextWrapping="WrapWithOverflow"
                Text="{Binding ValidationText_BasicImage}"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                Focusable="True"
                       />
            </ScrollViewer>
          </GroupBox>

          <Grid
                        KeyboardNavigation.IsTabStop="False"
                        KeyboardNavigation.TabIndex="1"
                HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
          >
            <Grid.RowDefinitions>
              <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"></ColumnDefinition>
              <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <GroupBox
              KeyboardNavigation.TabNavigation="Local"
          Grid.Row="0"
          Grid.Column="0"
    
              Margin="0, 6, 0, 0" Padding="6" >
              <GroupBox.Header>
                <TextBlock
                  Focusable="true"
                  FontWeight="Bold"
                        KeyboardNavigation.IsTabStop="True"
                        KeyboardNavigation.TabIndex="1"
                            Text="Simplified Image"/>
              </GroupBox.Header>

              <Grid
                    HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
              KeyboardNavigation.TabNavigation="Local"
          >
                <Grid.RowDefinitions>
                  <RowDefinition Height="*"></RowDefinition>
                  <RowDefinition Height="Auto"></RowDefinition>
                  <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"></ColumnDefinition>
                  <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                  <DockPanel LastChildFill="True" Grid.Row="0"
          Grid.Column="0"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Left"
                          >
                  <TextBlock Text="Image:"
                             FontWeight="Bold"
                             Margin="0,0,0,6"
                               Focusable="true"
                             KeyboardNavigation.IsTabStop="true"
                             KeyboardNavigation.TabIndex="1"
                              DockPanel.Dock="Top"
                             ></TextBlock>
                    
                  <StackPanel Orientation="Horizontal"
                              DockPanel.Dock="Bottom"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Button
                            FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                           Control.TabIndex="3"
                      x:Name="ButtonOpenImage_Simplified"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Stretch"
                            Margin="0,4,0,0"
                            Content="Open..."
                        
                      Click="OnClick_ButtonOpenImage_Simplified"/>
                    <Button
                            FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                           Control.TabIndex="4"
                      x:Name="ButtonClearImage_Simplified"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Stretch"
                            Margin="4,4,0,0"
                            Content="Clear"
                            IsEnabled="{Binding HasDescriptionImage_Simplified}"
                      Click="OnClick_ButtonClearImage_Simplified"/>
                  </StackPanel>


                </DockPanel>


                  <Border Grid.Row="0"
            Grid.Column="1"
                    HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                    Padding="0" Margin="6, 0, 0, 0" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
          >
                  <Image
                    Focusable="True"
                      KeyboardNavigation.IsTabStop="True"
                           KeyboardNavigation.TabIndex="2"
                
                            IsEnabled="{Binding HasDescriptionImage_Simplified}"
                    x:Name="DescriptionImage_Simplified"
                    HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                              Stretch = "Uniform"
                              StretchDirection="DownOnly"
                    ToolTip="{Binding DescriptionImage_Simplified, Mode=OneWay}"
                    Source="{Binding DescriptionImage_Simplified, Mode=OneWay, Converter={UI:PathToImageSourceConverter}}"
              >
                    <Image.Style>
                      <Style TargetType="{x:Type Image}">
                        <Style.Setters>
                          <Setter Property="AutomationProperties.Name">
                            <Setter.Value>
                              <MultiBinding StringFormat="Image full path: {0}"  Mode="OneWay">
                                <Binding Path="DescriptionImage_Simplified" Mode="OneWay"/>
                                <!-- Binding Path="Image.ImageMediaData.OriginalRelativePath"   Mode="OneWay" / -->
                              </MultiBinding>
                            </Setter.Value>
                          </Setter>
                        </Style.Setters>
                      </Style>
                    </Image.Style>
                  </Image>

                  </Border>

                <GridSplitter
                  Margin="0,3,0,3"
                  Grid.ColumnSpan="2"
                    Grid.Row="1"
                     Focusable="False"
                     HorizontalAlignment="Stretch" VerticalAlignment="Center">
                </GridSplitter>

                  <DockPanel LastChildFill="True"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Left"
          Grid.Row="2"
          Grid.Column="0">

                <TextBlock Text="Tour:"
                           FontWeight="Bold"
                               Focusable="true"
                             Margin="0,0,0,6"
                              DockPanel.Dock="Top"
                           KeyboardNavigation.IsTabStop="true"
                           KeyboardNavigation.TabIndex="5"
                             ></TextBlock>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Bottom"
                    HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                  <Button
                            FocusVisualStyle="{StaticResource MyFocusVisualStyle}"
                         Control.TabIndex="7"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Stretch"
                          Margin="0,4,0,0"
