    Style="{StaticResource IconSmallImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <Binding Source="{StaticResource document-new}" Mode="OneWay"/>
        <Binding Source="{StaticResource IconSmallWidth}" Mode="OneWay"/>
