                         x:Shared="False"
    Style="{StaticResource IconSmallImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <Binding Source="{StaticResource document-save}" Mode="OneWay"/>
        <Binding Source="{StaticResource IconSmallWidth}" Mode="OneWay"/>
        <Binding Source="{StaticResource IconSmallHeight}" Mode="OneWay"/>
      </MultiBinding>
    </Image.Source>
  </infraUI:GreyableImage -->
  
</ResourceDictionary>