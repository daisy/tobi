  <ResourceDictionary Source="pack://application:,,,/Tobi.Infrastructure;component/tango-icons/utilities-system-monitor.xaml"/>

    </ResourceDictionary.MergedDictionaries>

  <infraUI:RenderTargetBitmapImageSourceConverter x:Key="RenderTargetBitmapImageSourceConverter"/>

  <infraUI:BooleanNotConverter x:Key="BooleanNotConverter"/>

  <Style x:Key="IconSmallImage" TargetType="{x:Type Image}">
    <Setter Property="Stretch" Value="Fill"/>
    <Setter Property="SnapsToDevicePixels" Value="False"/>
    <Setter Property="Width" Value="{x:Static Infrastructure:Sizes.IconWidth_Small}"/>
    <Setter Property="Height" Value="{x:Static Infrastructure:Sizes.IconHeight_Small}"/>
  </Style>

  <Style x:Key="IconButton">
    <Setter Property="Control.Padding" Value="2"/>
    <Setter Property="RepeatButton.Delay" Value="0"/>
    <Setter Property="RepeatButton.Interval" Value="100"/>
  </Style>

  <Style x:Key="ButtonImage" TargetType="{x:Type Image}">
    <Setter Property="Stretch" Value="Fill"/>
    <Setter Property="SnapsToDevicePixels" Value="False"/>
    <Setter Property="Width" Value="{x:Static Infrastructure:Sizes.IconWidth_Medium}"/>
    <Setter Property="Height" Value="{x:Static Infrastructure:Sizes.IconHeight_Medium}"/>
  </Style>

  <infraUI:GreyableImage x:Key="Image_media-playback-stop"
                         x:Shared="False"
                         Style="{StaticResource ButtonImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <!-- Binding RelativeSource="{x:Static RelativeSource.Self}" Mode="OneWay"/ -->
        <Binding Source="{StaticResource media-playback-stop}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconWidth_Medium}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconHeight_Medium}" Mode="OneWay"/>
      </MultiBinding>
    </Image.Source>
  </infraUI:GreyableImage>

  <infraUI:GreyableImage x:Key="Image_media-record"
                         x:Shared="False"
                         Style="{StaticResource ButtonImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <!-- Binding RelativeSource="{x:Static RelativeSource.Self}" Mode="OneWay"/ -->
        <Binding Source="{StaticResource media-record}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconWidth_Medium}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconHeight_Medium}" Mode="OneWay"/>
      </MultiBinding>
    </Image.Source>
  </infraUI:GreyableImage>

  <infraUI:GreyableImage x:Key="Image_media-playback-start"
                         x:Shared="False"
                         Style="{StaticResource ButtonImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <!-- Binding RelativeSource="{x:Static RelativeSource.Self}" Mode="OneWay"/ -->
        <Binding Source="{StaticResource media-playback-start}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconWidth_Medium}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconHeight_Medium}" Mode="OneWay"/>
      </MultiBinding>
    </Image.Source>
  </infraUI:GreyableImage>

  <infraUI:GreyableImage x:Key="Image_media-playback-pause"
                         x:Shared="False"
    Style="{StaticResource ButtonImage}">
    <Image.Source>
      <MultiBinding Converter="{StaticResource RenderTargetBitmapImageSourceConverter}">
        <!-- Binding RelativeSource="{x:Static RelativeSource.Self}" Mode="OneWay"/ -->
        <Binding Source="{StaticResource media-playback-pause}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconWidth_Medium}" Mode="OneWay"/>
        <Binding Source="{x:Static Infrastructure:Sizes.IconHeight_Medium}" Mode="OneWay"/>
      </MultiBinding>
    </Image.Source>
  </infraUI:GreyableImage>

