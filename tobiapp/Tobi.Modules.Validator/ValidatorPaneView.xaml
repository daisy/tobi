    </Grid.RowDefinitions>
    
    <!-- Left side: List of all validation items -->
    <ListBox Grid.Row="0" Grid.Column="0" 
             ItemsSource="{Binding Source={StaticResource ValidationItemsCVS}}"
             IsSynchronizedWithCurrentItem="True"
