    xmlns:Metadata="clr-namespace:Tobi.Plugin.Validator.Metadata">

  <DataTemplate DataType="{x:Type Metadata:MetadataValidationError}">
    <TextBlock Background="Green" Text="{Binding Message}"/>
  </DataTemplate>
  
</ResourceDictionary>
