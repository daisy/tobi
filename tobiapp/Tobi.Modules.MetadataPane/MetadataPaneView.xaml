            <DataTemplate x:Key="ContentTemplate">
                <StackPanel>
                    
                    <TextBox x:Name="textBox" Validation.ErrorTemplate="{x:Null}" LostFocus="textBox_LostFocus">
                        <Binding Path="Content" UpdateSourceTrigger="Explicit"  ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
