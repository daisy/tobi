<DockPanel
    x:Class="Tobi.Modules.MetadataPane.MetadataPaneView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Tobi.Modules.MetadataPane"
    xmlns:UI="clr-namespace:Tobi.Common.UI;assembly=Tobi.Common"
    xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
    LastChildFill="True" Loaded="DockPanel_Loaded">


    <DockPanel.Resources>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        
        <!--Basic Row Validation Error Template-->
        <ControlTemplate x:Key="BasicRowValidationErrorTemplate">
            <DockPanel LastChildFill="True">
                <Border BorderBrush="Red" BorderThickness="2">

                    <StackPanel Orientation="Vertical">
                        <AdornedElementPlaceholder Name="adornerPlaceholder"/>
                        <TextBlock Text="{Binding RelativeSource={x:Static RelativeSource.Self},
                                                  Path=(Validation.Errors)[0].ErrorContent}"/>
                    </StackPanel>
                </Border>
            </DockPanel>
        </ControlTemplate>

        <!--Default Row Style-->
        <Style x:Key="defaultRowStyle" TargetType="{x:Type toolkit:DataGridRow}">
            <Setter Property="MaxHeight" Value="150" />
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource BasicRowValidationErrorTemplate}" />
            <Style.Triggers>
                <Trigger Property="IsEditing" Value="true">
                    <Setter Property="Background" Value="Blue"/> 
                    <Setter Property="BorderBrush" Value="Blue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                
            </Style.Triggers>
        </Style>
        
    </DockPanel.Resources>

    <Grid DockPanel.Dock="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button Click="Add_Metadata_Button_Click" 
                Grid.Column="0" 
                Grid.Row="0">
                Add
            </Button>
            <Button Click="Remove_Metadata_Button_Click" 
                Grid.Column="1" 
                Grid.Row="0" >
                Remove
            </Button>
        </StackPanel>
        <Button Click="Validate_Metadata_Click" 
                Grid.Column="2" 
                Grid.Row="0">
            Validate
        </Button>

        <TextBox x:Name="LookupField" 
                 Grid.Row="1" 
                 Grid.Column="0" 
                 Grid.ColumnSpan="2" 
                 Height="20"/>
        <Button  Click="Lookup_Button_Click" 
                 Grid.Column="2" 
                 Grid.Row="1">
            Lookup
        </Button>

        <ListBox ItemsSource="{Binding ValidationErrors}"
                 Grid.Row="2" 
                 Grid.Column="0" 
                 Grid.ColumnSpan="3" MinHeight="100"/>
        
        <StatusBar Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Left">
            <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Left"/>
        </StatusBar>
    </Grid>


    <!--<StackPanel Background="LightCoral">
            <TextBlock>Testing only:</TextBlock>
            <Button Click="Fake_Button_Click">Generate fake data</Button>
            <Button Click="Data_Model_Report_Click">View data model metadata</Button>
        </StackPanel>
    </StackPanel>-->

    <toolkit:DataGrid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        ItemsSource="{Binding Metadatas, Mode=OneWay}"
        AutoGenerateColumns="False"
        SelectionMode="Extended"
        SelectionUnit="CellOrRowHeader"
        RowStyle="{StaticResource defaultRowStyle}">
        
        <toolkit:DataGrid.RowValidationRules>
            <local:MetadataValidationRule/>
        </toolkit:DataGrid.RowValidationRules>
        
        <toolkit:DataGrid.Columns>
            
            <toolkit:DataGridTemplateColumn Header="Name" Width="SizeToCells"
                                            IsReadOnly="False">
                <toolkit:DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </toolkit:DataGridTemplateColumn.CellTemplate>
                
                <toolkit:DataGridTemplateColumn.CellEditingTemplate>
                    <DataTemplate>
                        <TextBox Text="{Binding Path=Name, 
                                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </DataTemplate>
                </toolkit:DataGridTemplateColumn.CellEditingTemplate>
            
            </toolkit:DataGridTemplateColumn>
            
            <toolkit:DataGridTemplateColumn Header="Content" Width="SizeToCells"  
                                               IsReadOnly="False">
                <toolkit:DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock x:Name="textBlock" Text="{Binding Content}"/>
                        </StackPanel>
                    </DataTemplate>
                </toolkit:DataGridTemplateColumn.CellTemplate>
                <toolkit:DataGridTemplateColumn.CellEditingTemplate>
                    <DataTemplate>
                            <TextBox x:Name="textBox" Text="{Binding Path=Content, 
                                        Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataTemplate>
                </toolkit:DataGridTemplateColumn.CellEditingTemplate>
            </toolkit:DataGridTemplateColumn>
        </toolkit:DataGrid.Columns>

    </toolkit:DataGrid>

</DockPanel>

