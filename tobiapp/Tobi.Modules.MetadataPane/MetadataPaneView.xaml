                                <local:RequiredDateValidationRule ErrorMessage="Please format data as YYYY-MM-DD" ValidatesOnTargetUpdated="True"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>

                    <ContentPresenter
                        Content="{Binding ElementName=textBox,
                        Path=(Validation.Errors).CurrentItem}">
                    </ContentPresenter>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="RequiredDateContent">
