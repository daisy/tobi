<DockPanel
    x:Class="Tobi.Modules.MetadataPane.MetadataPaneView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UI="clr-namespace:Tobi.Infrastructure.UI;assembly=Tobi.Infrastructure"
    xmlns:local="clr-namespace:Tobi.Modules.MetadataPane"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    LastChildFill="True">

    <DockPanel.Resources>
        <local:BoolToVisibilityConverter x:Key="boolToVis" />

        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style x:Key="metadataErrorStyle" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Red"/>
        </Style>

        <Style x:Key="metadataReadOnlyStyle" TargetType="{x:Type Control}">
            <Setter Property="Background" Value="Gray"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="NameStyle" >
            <Setter Property="Visibility" 
                    Value="{Binding Path=IsSelected,
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},
                    Converter={StaticResource boolToVis},
                    ConverterParameter=False}" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="RequiredNameStyle" 
               BasedOn="{StaticResource NameStyle}">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="{x:Type FrameworkElement}" x:Key="NameEditStyle">
            <Setter Property="Visibility" 
                    Value="{Binding Path=IsSelected,
                    RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},
                    Converter={StaticResource boolToVis},
                    ConverterParameter=True}" />
        </Style>
    </DockPanel.Resources>

    <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical">

        <StackPanel Orientation="Horizontal">
            <TextBox Width="200" x:Name="LookupField"></TextBox>
            <Button Click="Lookup_Button_Click">Lookup</Button>
        </StackPanel>

        <Button Click="Add_Metadata_Button_Click">Add</Button>
        <Button Click="Remove_Metadata_Button_Click">Remove</Button>

        <Button Click="Fake_Button_Click">Fake data</Button>
        <Button Click="Data_Model_Report_Click">Data model metadata</Button>
    </StackPanel>


    <UI:SortableListView
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      x:Name="list"
      ItemsSource="{Binding Metadatas, Mode=OneWay}"
      SelectionMode="Extended"
      ScrollViewer.HorizontalScrollBarVisibility="Visible"
      ScrollViewer.VerticalScrollBarVisibility="Visible"
      AlternationCount="2">

        <UI:SortableListView.Resources>

            <ObjectDataProvider MethodName="GetAvailableMetadata" 
                                ObjectType="{x:Type local:MetadataFilter}" 
                                x:Key="odp">
            </ObjectDataProvider>


            <!-- errors -->
            <DataTemplate DataType="{x:Type ValidationError}">
                <TextBlock Text="{Binding Path=ErrorContent}" Foreground="Red"/>
            </DataTemplate>

            <!-- for the name field -->
            <DataTemplate x:Key="RequiredName">
                <Grid>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource RequiredNameStyle}"/>
                    <!-- the style is the bit of magic that switches when the item is in focus -->
                    <!--<ComboBox ItemsSource="{Binding Source={StaticResource odp}, Path=Name}" 
                          SelectedItem="{Binding Path=Name}"
                          Style="{StaticResource NameEditStyle}"/>-->

                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="RecommendedName">
                <Grid>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource NameStyle}"/>
                    <!-- the style is the bit of magic that switches when the item is in focus -->
                    <!--<ComboBox ItemsSource="{Binding Source={StaticResource odp}}" 
                          DisplayMemberPath="Name"
                          SelectedValuePath="Name"
                          Style="{StaticResource NameEditStyle}"/>-->
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="OptionalName">
                <!-- the style is the bit of magic that switches when the item is in focus -->
                <Grid>
                    <TextBlock Text="{Binding Name}" Style="{StaticResource NameStyle}"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource odp}}" 
                          SelectedItem="{Binding Path=Name}"
                          Style="{StaticResource NameEditStyle}"
                          SelectionChanged="ComboBox_SelectionChanged"/>
                    
                </Grid>
            </DataTemplate>

            <!-- for the content field-->
            <DataTemplate x:Key="ReadOnlyContent">
                <StackPanel>
                    <TextBlock Text="{Binding Content}"/>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="OptionalStringContent">
                <TextBox Text="{Binding Content}"/>
            </DataTemplate>

            <DataTemplate x:Key="RequiredStringContent">
                <StackPanel>
                    <TextBox x:Name="requiredString" Validation.ErrorTemplate="{x:Null}">
                        <Binding Path="Content" UpdateSourceTrigger="LostFocus"  ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:RequiredStringValidationRule ErrorMessage="Field cannot be empty"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>

                    <ContentPresenter
                        Content="{Binding ElementName=requiredString,
                        Path=(Validation.Errors).CurrentItem}">
                    </ContentPresenter>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="OptionalDateContent">
                <StackPanel>
                    <TextBox x:Name="optionalDate" Validation.ErrorTemplate="{x:Null}">
                        <Binding Path="Content" UpdateSourceTrigger="LostFocus"  ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:RequiredDateValidationRule ErrorMessage="Please format data as YYYY-MM-DD"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>

                    <ContentPresenter
                        Content="{Binding ElementName=optionalDate,
                        Path=(Validation.Errors).CurrentItem}">
                    </ContentPresenter>
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="RequiredDateContent">
                <StackPanel>
                    <TextBox x:Name="requiredDate" Validation.ErrorTemplate="{x:Null}">
                        <Binding Path="Content" UpdateSourceTrigger="LostFocus"  ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <local:RequiredDateValidationRule ErrorMessage="Please format data as YYYY-MM-DD"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox>

                    <ContentPresenter
                        Content="{Binding ElementName=requiredDate,
                        Path=(Validation.Errors).CurrentItem}">
                    </ContentPresenter>
                </StackPanel>

            </DataTemplate>

            <local:ContentTemplateSelector
                RequiredDateTemplate="{StaticResource RequiredDateContent}"
                RequiredStringTemplate="{StaticResource RequiredStringContent}"
                OptionalStringTemplate="{StaticResource OptionalStringContent}"
                OptionalDateTemplate="{StaticResource OptionalDateContent}"
                ReadOnlyTemplate="{StaticResource ReadOnlyContent}"
                DefaultTemplate="{StaticResource OptionalStringContent}"
                x:Key="ContentTemplateSelector" />

            <local:NameTemplateSelector
                RequiredTemplate="{StaticResource RequiredName}"
                RecommendedTemplate="{StaticResource RecommendedName}"
                OptionalTemplate="{StaticResource OptionalName}"
                x:Key="NameTemplateSelector"/>

        </UI:SortableListView.Resources>

        <UI:SortableListView.View>
            <GridView AllowsColumnReorder="false">
                <GridViewColumn>
                    <GridViewColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox Checked="AllSelectionChanged" Unchecked="AllSelectionChanged"/>
                        </DataTemplate>
                    </GridViewColumn.HeaderTemplate>
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding
                        RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListViewItem}},
                        Path=IsSelected, Mode=TwoWay}"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <GridViewColumn Header="Name"
                        UI:SortableListView.SortPropertyName="Name"
                        CellTemplateSelector="{StaticResource NameTemplateSelector}"/>

                <GridViewColumn Header="Content"
                        UI:SortableListView.SortPropertyName="Content"
                        CellTemplateSelector="{StaticResource ContentTemplateSelector}"/>
            </GridView>
        </UI:SortableListView.View>

        <UI:SortableListView.ItemContainerStyle>

            <Style TargetType="{x:Type ListViewItem}">
                <Style.Triggers>
                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                        <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </UI:SortableListView.ItemContainerStyle>
    </UI:SortableListView>


</DockPanel>

