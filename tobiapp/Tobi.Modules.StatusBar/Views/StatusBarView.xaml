<UserControl x:Class="Tobi.Modules.StatusBar.Views.StatusBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:infra="clr-namespace:Tobi.Infrastructure;assembly=Tobi.Infrastructure"
    xmlns:local="clr-namespace:Tobi.Modules.StatusBar.Views">

  <StackPanel x:Name="StatusBarPanel" Margin="0,0,0,0" Orientation="Horizontal">

    <Button x:Name="buttonChangeStatusText" Command="{x:Static local:StatusBarView.StatusTextCommand}" CommandParameter="CMD form XAML Button" Width="Auto" Height="Auto">.. Change Status Text</Button>

    <Label x:Name="labelStatusHeader" Content="Status: " Width="Auto" Height="Auto" FontSize="{x:Static infra:Sizes.DefaultFontSize}"/>
    <Label x:Name="labelStatusText" Content="{Binding Path=DisplayString}" Width="Auto" Height="Auto" FontSize="{x:Static infra:Sizes.DefaultFontSize}"/>
  </StackPanel>
</UserControl>
